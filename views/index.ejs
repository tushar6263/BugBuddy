<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BugBuddy:-Bug Shop</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="font-['helvetica_now_display']">
  <nav class="w-full flex justify-between items-center px-5 py-3">
    <a href="/" class="flex items-center gap-1 text-xl font-bold">
      Bug<span class="text-blue-500">Buddy</span>
      <img src="/images/bags.png" alt="logo" width="25" height="25">
    </a>

    <ul class="flex gap-5 items-center">
      <a href="/shop">Shop</a>
      <a href="">Card</a>
      <a href="">My Account</a>
    </ul>

  </nav>

  <% if(error.length> 0){ %>
    <div
      class="fixed top-5 left-1/2 -translate-x-1/2 px-4 py-2 rounded-md bg-red-500 max-w-xs sm:max-w-sm md:max-w-md text-center">
      <span class="inline-block text-white text-sm sm:text-base">
        <%= error %>
      </span>
    </div>
    <% } %>

      <div
        class="w-full min-h-screen flex flex-col lg:flex-row items-center justify-center px-4 sm:px-8 lg:px-20 py-8 gap-10">

        <!-- Register Section -->
        <div class="w-full lg:w-1/2 flex items-center justify-center">
  <div class="w-full max-w-md px-4 sm:px-6 lg:px-10">
    
    <!-- Heading -->
    <h3 class="text-2xl sm:text-3xl lg:text-3xl font-semibold mb-3 flex items-center gap-2">
      Welcome to 
      <span class="flex items-center gap-1 text-3xl font-bold">
        Bug<span class="text-blue-500">Buddy</span>
        <img src="/images/bags.png" alt="logo" width="28" height="28" class="inline-block">
      </span>
    </h3>

    <!-- Subheading -->
    <h4 class="text-lg sm:text-xl lg:text-2xl mb-5">Create your account</h4>

    <!-- Form -->
    <form autocomplete="off" action="/users/register" method="post" class="space-y-3">
      <input class="bg-zinc-100 block w-full px-3 py-2 border rounded-md border-zinc-200" 
             type="text" placeholder="Full Name" name="fullname">
      <input class="bg-zinc-100 block w-full px-3 py-2 border rounded-md border-zinc-200" 
             type="email" placeholder="Email" name="email">
      <input class="bg-zinc-100 block w-full px-3 py-2 border rounded-md border-zinc-200" 
             type="password" placeholder="Password" name="password">
      <input class="w-full lg:w-auto px-5 py-3 mt-2 rounded-full bg-blue-500 text-white cursor-pointer" 
             type="submit" value="Create My Account">
    </form>

  </div>
</div>


        <!-- Login Section -->
        <div class="w-full lg:w-1/2 flex items-center justify-center">
          <div class="w-full max-w-md px-4 sm:px-6 lg:px-10">
            <h4 class="text-lg sm:text-xl lg:text-2xl capitalize mb-5">Login your account</h4>
            <form autocomplete="off" action="/users/login" method="post" class="space-y-3">
              <input class="block bg-zinc-100 w-full px-3 py-2 border rounded-md border-zinc-200" type="email"
                placeholder="Email" name="email">
              <input class="block bg-zinc-100 w-full px-3 py-2 border rounded-md border-zinc-200" type="password"
                placeholder="Password" name="password">
              <input class="w-full lg:w-auto px-5 block rounded-full py-3 mt-2 bg-blue-500 text-white cursor-pointer"
                type="submit" value="Login">
            </form>
          </div>
        </div>

      </div>

      <%- include('./partials/footer') %>